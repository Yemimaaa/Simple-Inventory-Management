<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Of Transactions</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <!-- Custom styles -->
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        h1 {
            margin-bottom: 20px;
            font-size: 2.5rem;
        }

        .container {
            max-width: 800px;
        }

        .form-inline {
            margin-bottom: 20px;
        }

        .btn-create {
            margin-bottom: 20px;
        }

        .table {
            background-color: #fff;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            width: 100%;
        }

            .table th, .table td {
                padding: 12px;
                text-align: center;
            }

            .table th {
                background-color: #007bff;
                color: #fff;
            }

            .table td {
                border-top: 1px solid #dee2e6;
            }

            .table a {
                color: #007bff;
                text-decoration: none;
                margin: 0 5px;
            }

                .table a:hover {
                    text-decoration: underline;
                }

        /* Button styles */
        .btn {
            color: #fff;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #218838;
            }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-info:hover {
                background-color: #138496;
                border-color: #138496;
            }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                border-color: #e0a800;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #c82333;
            }
    </style>
</head>
<body>

    <div class="container">
        <h1>List Of Transactions</h1>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.Message
            </div>
        }

        <form class="form-inline" method="post" action="/Transactions/Index">
            <input type="text" class="form-control mb-2 mr-sm-2" name="productName" placeholder="Search by Product Name">
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </form>

        <a href="/Transactions/Create" class="btn btn-success btn-create"><i class="fa fa-plus"></i> Create Transaction</a>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Transaction Id</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Type</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Date</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model)
                    {
                        <tr>
                            <td>@transaction.TransactionId</td>
                            <td>@transaction.ProductName</td>
                            <td>
                                @{
                                    if (transaction.Type == Type.Add)
                                    {
                                        <text>Add</text>
                                    }
                                    else if (transaction.Type == Type.Remove)
                                    {
                                        <text>Remove</text>
                                    }
                                    else
                                    {
                                        <text>Unknown</text> <!-- or handle the unknown case as needed -->
                                    }
                                }
                            </td>
                            <td>@transaction.Quantity</td>
                            <td>@transaction.Date</td>
                            <td>
                                <a href="/Transactions/Details/@transaction.TransactionId" class="btn btn-info btn-sm" style="color: white;">Detail</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-DsXdM2EofLof9kWo/JeE2Wqv+VtjUivDkCk4x0G2QgWlA6WWHsOBuhzrvO+2DhuZ" crossorigin="anonymous"></script>

</body>
</html>
